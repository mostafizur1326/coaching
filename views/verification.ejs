<body class="w-full h-full bg-[#DEFFEE] tracking-tighter">

  <main class="flex flex-col min-h-screen">
    <section class="flex-grow">
      
      <section class="font-cy w-full h-screen flex flex-col items-center justify-center max-w-md mx-auto p-8">
        <h2 class="text-2xl font-semibold text-center text-gray-800 mb-6">Enter Verification Code</h2>
        <form action="/user/verify" method="post" class="space-y-4">
          <div class="flex justify-center space-x-2">
            
            <input type="number" name="digit1" id="digit1" maxlength="1" oninput="moveFocus(this, 'digit2')" class="w-12 h-12 text-center text-xl border border-gray-300 bg-transparent rounded-md focus:outline-none focus:ring-2 focus:ring-teal-400" required>
            <input type="number" name="digit2" id="digit2" maxlength="1" oninput="moveFocus(this, 'digit3')" class="w-12 h-12 text-center text-xl border border-gray-300 bg-transparent rounded-md focus:outline-none focus:ring-2 focus:ring-teal-400" required>
            <input type="number" name="digit3" id="digit3" maxlength="1" oninput="moveFocus(this, 'digit4')" class="w-12 h-12 text-center text-xl border border-gray-300 bg-transparent rounded-md focus:outline-none focus:ring-2 focus:ring-teal-400" required>
            <input type="number" name="digit4" id="digit4" maxlength="1" oninput="moveFocus(this, 'digit5')" class="w-12 h-12 text-center text-xl border border-gray-300 bg-transparent rounded-md focus:outline-none focus:ring-2 focus:ring-teal-400" required>
            <input type="number" name="digit5" id="digit5" maxlength="1" oninput="moveFocus(this, 'digit6')" class="w-12 h-12 text-center text-xl border border-gray-300 bg-transparent rounded-md focus:outline-none focus:ring-2 focus:ring-teal-400" required>
            <input type="number" name="digit6" id="digit6" maxlength="1" oninput="moveFocus(this, null)" class="w-12 h-12 text-center text-xl border border-gray-300 bg-transparent rounded-md focus:outline-none focus:ring-2 focus:ring-teal-400" requi bg-transparentred>
          </div>
          
          <button type="submit" class="w-full bg-teal-600 text-white py-2 rounded-md hover:bg-teal-700 mt-4">Verify Code</button>
        </form>
      </section>

    </section>
    
