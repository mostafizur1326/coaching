<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  
  <!--===== FAVICON =====-->
  <link rel="shortcut icon" type="image/x-icon" href="/images/favicon.png">

  <script src="https://cdn.tailwindcss.com"></script>
  
  <!--===== STYLESHEET =====-->
  <link rel="stylesheet" href="/stylesheets/style.css">
  
  <!--===== ICON_URL =====-->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
  <link href="https://cdn.jsdelivr.net/npm/boxicons/css/boxicons.min.css" rel="stylesheet">
  
  <style> 
    .hidden { display: none; }
    .active-tab { background-color: #2563eb; color: white; }
    .transition-height {
      transition: max-height 0.3s ease;
      overflow: hidden;
    }
  </style>

  <title>ADMIM | Students Management</title>
</head>

<body class="w-full h-full bg-[#F5FAFF] tracking-tighter">

  <main class="flex flex-col min-h-screen">
    
    <section class="flex-grow">
      
      <div class="z-[9999] font-cy fixed top-0 left-1/2 transform -translate-x-1/2 w-[350px] bg-green-100 text-green-700 rounded-bl-lg rounded-br-lg shadow-md">
        <% if (messages.success) { %>
        <p class="p-4 text-center"><%= messages.success %></p>
        <% } %>
      </div>
      
      <div class="z-[9999] font-cy fixed top-0 left-1/2 transform -translate-x-1/2 w-[350px] bg-red-100 text-red-700 rounded-bl-lg rounded-br-lg shadow-md">
        <% if (messages.error) { %>
        <p class="p-4 text-center"><%= messages.error %></p>
        <% } %>
      </div>
      
   
      <section class="font-cy max-w-4xl mx-auto px-4 py-6 mt-56">
        
        <div class="z-[9999] font-cy fixed top-0 left-1/2 transform -translate-x-1/2 w-[350px] bg-green-100 text-green-700 rounded-bl-lg rounded-br-lg shadow-md">
          <% if (messages.success) { %>
          <p class="p-4 text-center"><%= messages.success %></p>
          <% } %>
        </div>
        
        <div class="z-[9999] font-cy fixed top-0 left-1/2 transform -translate-x-1/2 w-[350px] bg-red-100 text-red-700 rounded-bl-lg rounded-br-lg shadow-md">
          <% if (messages.error) { %>
          <p class="p-4 text-center"><%= messages.error %></p>
          <% } %>
        </div>
        
        <div class="absolute top-28 left-4 md:ml-20 z-[999]">
            <button class="text-gray-600 hover:text-gray-800">
                <a href="/admin/dashboard" class="ml-2 font-medium text-sm">‚ÜêBack</a>
            </button>
        </div>
        
        <!-- Dropdown Navigation -->
        <div class="relative">
          <button id="dropdownButton" 
                  class="w-full bg-blue-600 text-white font-medium py-2 px-4 rounded-lg flex justify-between items-center focus:outline-none">
            <span>Students Navigation</span>
            <i id="dropdownIcon" class="bx bx-chevron-down text-xl"></i>
          </button>
    
          <!-- Dropdown Content -->
          <div id="studentsDropdownMenu" class="hidden transition-height shadow-lg rounded-lg mt-2 overflow-hidden">
            <button class="tab-button block w-full text-left px-4 py-2 border-b focus:outline-none" data-target="all-students">All Students</button>
            <button class="tab-button block w-full text-left px-4 py-2 border-b focus:outline-none" data-target="class-six">Class 6</button>
            <button class="tab-button block w-full text-left px-4 py-2 border-b focus:outline-none" data-target="class-seven">Class 7</button>
            <button class="tab-button block w-full text-left px-4 py-2 border-b focus:outline-none" data-target="class-eight">Class 8</button>
            <button class="tab-button block w-full text-left px-4 py-2 border-b focus:outline-none" data-target="class-nine">Class 9</button>
            <button class="tab-button block w-full text-left px-4 py-2 border-b focus:outline-none" data-target="class-ten">Class 10</button>
            <button class="tab-button block w-full text-left px-4 py-2 focus:outline-none" data-target="add-student">Add Student</button>
          </div>
        </div>
        
        <!-- Tab Content -->
        <div class="p-4 rounded-lg shadow mt-6">
          <!-- All Students -->
          <div id="all-students" class="tab-content max-h-[500px] overflow-scroll scrollbar-hide">
              <% if (students.length > 0){ %>
              <h2 class="text-lg font-bold text-gray-700 mb-4">All Students</h2>
              <% students.forEach((student) => { %>
                <div class="space-y-2">
                  <p class="flex justify-between items-center px-2 py-2 transition hover:bg-blue-100 rounded-sm">
                    <span><%= student.student_name %></span>
                    <span class="flex gap-4">
                    <a href="/admin/student/details/<%= student._id %>" class="text-blue-700 bg-blue-100 px-4 rounded-lg hover:bg-blue-200 text-xl">
                     <i class="bx bx-show"></i>
                     </a>
                    </span>
                  </p>
                </div>
              <% }) %>
              <% } else {%>
              <p class="text-sm ml-4 text-zinc-300">Student is not available</p>
            <% } %>
          </div>
            
          <!-- Class 6 -->
          <div id="class-six" class="tab-content hidden max-h-[500px] overflow-scroll scrollbar-hide">
            <% if (classSixStudents.length > 0){ %>
              <h2 class="text-lg font-bold text-gray-700 mb-4">Class 6 Students</h2>
              <% classSixStudents.forEach((student) => { %>
                <div class="space-y-2">
                  <p class="flex justify-between items-center px-2 py-2 transition hover:bg-blue-100 rounded-sm">
                    <span><%= student.student_name %></span>
                    <span class="flex gap-4">
                    <a href="/admin/student/details/<%= student._id %>" class="text-blue-700 bg-blue-100 px-4 rounded-lg hover:bg-blue-200 text-xl">
                     <i class="bx bx-show"></i>
                     </a>
                    </span>
                  </p>
                </div>
              <% }) %>
              <% } else {%>
              <p class="text-sm ml-4 text-zinc-300">Student is not available</p>
            <% } %>
          </div>
        
          <!-- Class 7 -->
          <div id="class-seven" class="tab-content hidden max-h-[500px] overflow-scroll scrollbar-hide">
            <% if (classSevenStudents.length > 0){ %>
              <h2 class="text-lg font-bold text-gray-700 mb-4">Class 7 Students</h2>
              <% classSevenStudents.forEach((student) => { %>
                <div class="space-y-2">
                  <p class="flex justify-between items-center px-2 py-2 transition hover:bg-blue-100 rounded-sm">
                    <span><%= student.student_name %></span>
                    <span class="flex gap-4">
                    <a href="/admin/student/details/<%= student._id %>" class="text-blue-700 bg-blue-100 px-4 rounded-lg hover:bg-blue-200 text-xl">
                     <i class="bx bx-show"></i>
                     </a>
                    </span>
                  </p>
                </div>
              <% }) %>
              <% } else {%>
              <p class="text-sm ml-4 text-zinc-300">Student is not available</p>
            <% } %>
          </div>
        
          <!-- Class 8 -->
          <div id="class-eight" class="tab-content hidden max-h-[500px] overflow-scroll scrollbar-hide">
            <% if (classEightStudents.length > 0){ %>
              <h2 class="text-lg font-bold text-gray-700 mb-4">Class 8 Students</h2>
              <% classEightStudents.forEach((student) => { %>
                <div class="space-y-2">
                  <p class="flex justify-between items-center px-2 py-2 transition hover:bg-blue-100 rounded-sm">
                    <span><%= student.student_name %></span>
                    <span class="flex gap-4">
                    <a href="/admin/student/details/<%= student._id %>" class="text-blue-700 bg-blue-100 px-4 rounded-lg hover:bg-blue-200 text-xl">
                     <i class="bx bx-show"></i>
                     </a>
                    </span>
                  </p>
                </div>
              <% }) %>
              <% } else {%>
              <p class="text-sm ml-4 text-zinc-300">Student is not available</p>
            <% } %>
          </div>
        
          <!-- Class 9 -->
          <div id="class-nine" class="tab-content hidden max-h-[500px] overflow-scroll scrollbar-hide">
            <% if (classNineStudents.length > 0){ %>
              <h2 class="text-lg font-bold text-gray-700 mb-4">Class 9 Students</h2>
              <% classNineStudents.forEach((student) => { %>
                <div class="space-y-2">
                  <p class="flex justify-between items-center px-2 py-2 transition hover:bg-blue-100 rounded-sm">
                    <span><%= student.student_name %></span>
                    <span class="flex gap-4">
                    <a href="/admin/student/details/<%= student._id %>" class="text-blue-700 bg-blue-100 px-4 rounded-lg hover:bg-blue-200 text-xl">
                     <i class="bx bx-show"></i>
                     </a>
                    </span>
                  </p>
                </div>
              <% }) %>
              <% } else {%>
              <p class="text-sm ml-4 text-zinc-300">Student is not available</p>
            <% } %>
          </div>
        
          <!-- Class 10 -->
          <div id="class-ten" class="tab-content hidden max-h-[500px] overflow-scroll scrollbar-hide">
            <% if (classTenStudents.length > 0){ %>
              <h2 class="text-lg font-bold text-gray-700 mb-4">Class 10 Students</h2>
              <% classTenStudents.forEach((student) => { %>
                <div class="space-y-2">
                  <p class="flex justify-between items-center px-2 py-2 transition hover:bg-blue-100 rounded-sm">
                    <span><%= student.student_name %></span>
                    <span class="flex gap-4">
                    <a href="/admin/student/details/<%= student._id %>" class="text-blue-700 bg-blue-100 px-4 rounded-lg hover:bg-blue-200 text-xl">
                     <i class="bx bx-show"></i>
                     </a>
                    </span>
                  </p>
                </div>
              <% }) %>
              <% } else {%>
              <p class="text-sm ml-4 text-zinc-300">Student is not available</p>
            <% } %>
          </div>
        
          <!-- Add Student -->
          <div id="add-student" class="tab-content hidden">
            <h2 class="text-lg font-bold text-gray-700 mb-4">Add a New Student</h2>
            <form action="/admin/add/student" method="POST" class="space-y-4" enctype="multipart/form-data">
              <div>
                <label for="student-photo" class="block text-gray-700">student Photo</label>
                <input type="file" id="student-photo" name="student_photo" accept="image/png, image/jpg, image/jpeg" class="w-full px-3 py-2 border rounded focus:outline-none focus:ring focus:ring-blue-300" required>
              </div>
              
              <div>
                <label for="student-name" class="block text-gray-700">Student Name</label>
                <input type="text" id="student-name" name="student_name" class="w-full px-3 py-2 border rounded bg-transparent focus:outline-none focus:ring focus:ring-blue-300" placeholder="Enter student name" required>
              </div>
              
              <div>
                <label for="student-roll" class="block text-gray-700">Student Roll</label>
                <input type="text" id="student-roll" name="student_roll" class="w-full px-3 py-2 border rounded bg-transparent focus:outline-none focus:ring focus:ring-blue-300" placeholder="Enter student roll" required>
              </div>
              
              <div>
                <label for="student-class" class="block text-gray-700">Class</label>
                <select id="student-class" name="student_class" class="w-full px-3 py-2 border rounded bg-transparent focus:outline-none focus:ring focus:ring-blue-300" required>
                  <option value="" disabled selected>Select Class</option>
                  <option value="6">Class 6</option>
                  <option value="7">Class 7</option>
                  <option value="8">Class 8</option>
                  <option value="9">Class 9</option>
                  <option value="10">Class 10</option>
                </select>
              </div>
              
              <div>
                <label for="student-fee" class="block text-gray-700">Student Fee</label>
                <input type="text" id="student-fee" name="student_fee" class="w-full px-3 py-2 border rounded bg-transparent focus:outline-none focus:ring focus:ring-blue-300" placeholder="Enter student fee" required>
              </div>
              <div>
                <label for="student-contact" class="block text-gray-700">Student Contact</label>
                <input type="text" id="student-contact" name="student_contact" class="w-full px-3 py-2 border rounded bg-transparent  focus:outline-none focus:ring focus:ring-blue-300" placeholder="Enter student contact" required>
              </div>
              
              <button type="submit" class="w-full bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600">Add Student</button>
            </form>
          </div>
        </div>
      </section>
    </section>
  </main>


  <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.10.4/gsap.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.5/ScrollTrigger.min.js" integrity="sha512-onMTRKJBKz8M1TnqqDuGBlowlH0ohFzMXYRNebz+yOcc5TQr/zAKsthzhuv0hiyUKEiQEQXEynnXCvNTOk50dg==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
  
  <script src="/javascripts/dashboard.js"></script>
</body>

</html>