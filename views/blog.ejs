                    <% } else { %>
                    <li><a href="/user/login" class="flex items-center px-4 py-2 text-sm hover:bg-zinc-900 hover:text-white">
                      <i class="bx bx-log-in mr-2"></i> Login
                    </a></li>
                  <% } %>
                </ul>
              </div>
            </div>
        </header>

        <!--====== SM_HEADER =====-->
        
        <header class="small_header w-full bg-red-500 relative sm:hidden overflow-hidden">
          <div class="header_head fixed bg-[#F5FAFF69] backdrop-blur-sm top-0 left-0 w-full h-20 flex justify-between items-center px-5 shadow-lg z-[109]">

            <div class="sm_logo font-bold text-2xl z-[999] overflow-hidden">
              <a href="/" class="ml-6 text-black font-Baumans font-bold flex cursor-pointer">
                <img src="/images/logo.png" class="w-[65px]" />
              </a>
            </div>

            <div class="relative">
              <button id="menuToggle" class="w-10 h-10 flex items-center justify-center overflow-hidden text-4xl text-gray-700 rounded-full absolute left-[35px] top-[-20px]">
                <i class="bx bx-user-circle user_i absolute flex items-center justify-center">
                  <!--  <img src="" class="w-full h-full object-cover absolute flex items-center justify-cente rounded-full">-->
                </i>
              </button>

              <div id="menuDropdown" class="hidden absolute right-[-100px] mt-10 w-48 bg-[#F5FAFF] text-gray-800 font-cy border border-zinc-100 rounded-lg shadow-lg">
                <ul class="py-1">
                  <% if (isLoggedIn) { %>
                    <li><a href="/user/logout" class="flex items-center px-4 py-2 text-sm hover:bg-zinc-900 hover:text-white">
                      <i class="bx bx-log-out mr-2"></i> Logout
                    </a></li>
                  <% } else { %>
                    <li><a href="/user/login" class="flex items-center px-4 py-2 text-sm hover:bg-zinc-900 hover:text-white">
                      <i class="bx bx-log-in mr-2"></i> Login
                    </a></li>
                  <% } %>
                </ul>
              </div>
            </div>

            <div class="overflow-hidden px-2 relative right-2">
              <div class="menu flex justify-center items-center w-20 h-6 border border-gray-600 rounded-full cursor-pointer relative">
                <span class="icons absolute flex justify-center items-center">
                  <img src="/images/svg/border-menu.svg" alt="" class="menu_icon min-w-[80px] h-20 flex justify-center items-center opacity-80 absolute">
                  <i class="bx bx-x cross_icon text-2xl i absolute top-[-440px]"></i>
                </span>
              </div>
            </div>
          </div>

          <div class="menu_list fixed right-[-425px] top-7 w-[424px] h-screen bg-[#F5FAFF] shadow-lg z-[99]">
            <ul class="list-none relative top-1/2 transform -translate-y-1/2 space-y-5">
              <li><a href="/" class="home flex justify-center text-[30px] font-Aclonica border-b border-gray-400 py-5 transition-all hover:bg-black hover:text-[#e9f1ef]">
                  <span class="link_home">H</span>
                  <span class="link_home">O</span>
                  <span class="link_home">M</span>
                  <span class="link_home">E</span>
                </a></li>
              <li><a href="/about" class="about flex justify-center text-[30px] font-Aclonica text-black border-b border-gray-400 py-5 transition-all hover:bg-black hover:text-[#e9f1ef]">
                  <span class="link_about">A</span>
                  <span class="link_about">B</span>
                  <span class="link_about">O</span>
                  <span class="link_about">U</span>
                  <span class="link_about">T</span>
                </a></li>
                <li><a href="/exams" class="exams flex justify-center text-[30px] font-Aclonica text-black border-b border-gray-400 py-5 transition-all hover:bg-black hover:text-white">
                  <span class="link_exams">E</span>
                  <span class="link_exams">X</span>
                  <span class="link_exams">A</span>
                  <span class="link_exams">M</span>
                  <span class="link_exams">S</span>
                </a></li>
                <li><a href="/payment/class" class="payment flex justify-center text-[30px] font-Aclonica text-black border-b border-gray-400 py-5 transition-all hover:bg-black hover:text-white">
                  <span class="link_payment">P</span>
                  <span class="link_payment">A</span>
                  <span class="link_payment">Y</span>
                  <span class="link_payment">M</span>
                  <span class="link_payment">E</span>
                  <span class="link_payment">C</span>
                  <span class="link_payment">T</span>
                </a></li>
              <li><a href="/blog" class="notice flex justify-center text-[30px] font-Aclonica text-black border-b border-gray-400 py-5 transition-all hover:bg-transparent bg-black hover:text-zinc-900 text-white">
                  <span class="link_notice">B</span>
                  <span class="link_notice">L</span>
                  <span class="link_notice">O</span>
                  <span class="link_notice">I</span>
                  <span class="link_notice">G</span>
                </a></li>
              <li><a href="/contact" class="contact flex justify-center text-[30px] font-Aclonica text-black border-b border-gray-400 py-5 transition-all hover:bg-black hover:text-white">
                  <span class="link_contact">C</span>
                  <span class="link_contact">O</span>
                  <span class="link_contact">N</span>
                  <span class="link_contact">T</span>
                  <span class="link_contact">A</span>
                  <span class="link_contact">C</span>
                  <span class="link_contact">T</span>
                </a></li>
            </ul>
          </div>
        </header>
      </nav>
      
      <!--===== NOTICE_HERO =====-->
      
      <section class="relative font-cy mt-56">
        <div class="lg:flex lg:items-center lg:justify-between max-w-7xl mx-auto p-6 lg:py-12">
          <div class="lg:ml-20 lg:w-full flex flex-col items-center justify-center">
            <h1 class="text-4xl text-center font-extrabold text-gray-900 leading-tight sm:text-5xl md:text-6xl">
              <span class="block">Transform Your Ideas</span>
              <span class="block text-blue-600">into Reality</span>
            </h1>
            <p class="mt-4 text-md text-center text-gray-600 sm:max-w-md sm:text-xl">
              Join our advanced block platform to share posts, events, and blogs, making your ideas secure and accessible to everyone.
            </p>
            <div class="mt-6 flex space-x-4">
              <a href="#learn_more" class="inline-flex items-center px-6 py-3 text-white bg-blue-600 rounded-lg shadow-md hover:bg-blue-700 transition duration-300">
                Learn More
              </a>
            </div>
          </div>
          <div class="mt-8 lg:mt-0 lg:w-1/2">
            <img src="https://via.placeholder.com/600" alt="Creative Workspace" class="w-full h-full object-cover rounded-lg shadow-lg lg:max-w-lg mx-auto">
          </div>
        </div>
      </section>
      
        <!--===== NOTICE_SECTION =====-->
      
      <section id="tab1" class="Notice font-cy tab-content p-4">
          <div id="learn_more" class="py-12 font-cy">
            <% if (posts.length > 0){ %>
            <div class="max-w-7xl mx-auto px-6">
              <h2 class="text-3xl font-bold text-gray-700 mb-10">All Latest Posts</h2>
              <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
              <% posts.reverse().forEach(post => { %>
                <div class="bg-[#F5FAFF] shadow-lg rounded-lg overflow-hidden transform hover:scale-105 transition duration-300">
                  <div class="flex items-center justify-center h-48 bg-cover bg-center">
                    <img class="h-full object-cover" src="<%= post.post_image %>" />
                  </div>
                  <div class="p-6">
                    <h3 class="h-8 text-xl font-bold text-gray-800 mb-2 overflow-hidden"><%= post.post_title %></h3>
                    <p class="h-6 overflow-hidden text-gray-600 mb-4"><%= post.post_description %></p>
                    <a href="/blog/view/<%= post._id %>" class="block w-full text-center bg-blue-600 text-white py-2 rounded-lg hover:bg-blue-700 transition">
                      View More
                    </a>
                  </div>
                </div>
              <% }) %>
              </div>
            </div>
            <% } else {%>
              <p class="text-sm ml-4 text-zinc-300">Post is not available</p>
            <% } %>
          </div>
        </section>
    </section>
    
