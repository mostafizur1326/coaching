<body class="w-full h-full bg-[#DEFFEE] tracking-tighter">
  
  <main class="flex flex-col min-h-screen">
  <section class="flex-grow w-full flex items-center justify-center">
    
    <!-- PROFILE SECTION -->
    <section class="font-cy w-full max-w-md p-8">
      <div class="absolute top-10 left-4 md:ml-20 z-[999]">
        <button class="text-gray-600 hover:text-gray-800">
          <a href="/student/profile" class="ml-2 font-medium text-sm">Back</a>
        </button>
      </div>

      <div class="w-full flex flex-col items-center justify-center mt-28">
        <div class="flex flex-col items-center justify-center gap-14 mb-8">
          <h1 class="text-3xl font-bold text-gray-800">Profile</h1>
          <p class="text-gray-500 mt-[-45px]">Upload your Photo</p>
        </div>
        <div class="space-y-6">
          <form action="/student/profile/avatar" method="POST" enctype="multipart/form-data" class="space-y-3">
            <input
              type="file"
              name="avatar"
              placeholder="Enter your full name"
              class="w-full bg-transparent p-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-teal-600"
            />
            <button
              type="submit"
              class="w-full py-2 bg-teal-600 text-white rounded-md font-medium hover:bg-teal-700"
            >
              Upload
            </button>
          </form>
        </div>
      </div>
    </section>
  </section>

  <!-- FOOTER -->
  <footer class="font-cy w-full bg-zinc-700 text-white py-8 mt-auto">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex flex-wrap justify-center space-x-4 text-sm mb-6">
