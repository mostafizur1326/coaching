      <!--===== CONTACT_FORM =====-->
      
      <section class="min-h-screen flex items-center justify-center font-cy">
        <form class="space-y-6" action="" method="POST">
          <h2 class="text-center text-3xl font-bold mb-8 text-gray-700 flex items-center gap-2 justify-center">Contact</h2>
      
          <div class="space-y-4">
            <div class="relative">
              <input type="text" name="name" class="w-[90%] py-2 pl-4 pr-10 border-b-2 border-zinc-500 rounded-md focus:outline-none bg-transparent input-field" placeholder="Name" required>
              <i class="fas fa-user-tag input-icon"></i>
            </div>
      
            <div class="relative">
              <input type="email" name="email" class="w-[100%] py-2 pl-4 pr-10 border-b-2 border-zinc-500 rounded-md focus:outline-none bg-transparent input-field" placeholder="Email" required>
              <i class="fas fa-envelope input-icon"></i>
            </div>
      
            <div class="relative">
              <textarea type="text" name="message" class="w-[90%] py-2 pl-4 pr-10 border-b-2 border-zinc-500 rounded-md focus:outline-none bg-transparent input-field" placeholder="Message..." required></textarea>
              <i class="fas fa-comments input-icon"></i>
            </div>
          </div>
      
          <button type="submit" class="w-full py-2 mt-4 bg-teal-600 text-white rounded-md hover:bg-teal-700 transition">
            Send
          </button>
        </form>
