  <link href="https://cdn.jsdelivr.net/npm/boxicons/css/boxicons.min.css" rel="stylesheet">

  <title>BPMHS | Register</title>
</head>

<body class="w-full h-full bg-[#DEFFEE] tracking-tighter">

  <main class="flex flex-col min-h-screen">
    <section class="flex-grow">
      <!--===== USER_REGISTRATION_FOEM =====-->
      
      <section class="min-h-screen flex items-center justify-center p-8 font-cy">
        <form class="space-y-6" action="/user/register" method="POST">
          <h2 class="text-center text-3xl font-bold mb-8 text-gray-700 flex items-center gap-2 justify-center">
            <i class="fas fa-user"></i> REGISTER
          </h2>
      
          <div class="space-y-4">
            <div class="relative">
              <input type="text" name="fullname" class="w-full py-2 pl-4 pr-10 border-b-2 border-zinc-500 rounded-md focus:outline-none bg-transparent input-field" placeholder="Full Name" required>
              <i class="fas fa-user input-icon"></i>
            </div>
      
            <div class="relative">
              <input type="text" name="username" class="w-full py-2 pl-4 pr-10 border-b-2 border-zinc-500 rounded-md focus:outline-none bg-transparent input-field" placeholder="Username" required>
              <i class="fas fa-user-tag input-icon"></i>
            </div>
      
            <div class="relative">
              <input type="email" name="email" class="w-full py-2 pl-4 pr-10 border-b-2 border-zinc-500 rounded-md focus:outline-none bg-transparent input-field" placeholder="Email" required>
              <i class="fas fa-envelope input-icon"></i>
            </div>
      
            <div class="relative">
              <input type="number" name="number" class="w-full py-2 pl-4 pr-10 border-b-2 border-zinc-500 rounded-md focus:outline-none bg-transparent input-field" placeholder="Number" required>
              <i class="fas fa-phone-alt input-icon"></i>
            </div>
      
            <div class="relative">
              <input type="password" name="password" class="w-full py-2 pl-4 pr-10 border-b-2 border-zinc-500 rounded-md focus:outline-none bg-transparent input-field" placeholder="Password" required>
              <i class="fas fa-lock input-icon"></i>
            </div>
      
            <div class="relative">
              <input type="password" name="confirmPassword" class="w-full py-2 pl-4 pr-10 border-b-2 border-zinc-500 rounded-md focus:outline-none bg-transparent input-field" placeholder="Confirm Password" required>
              <i class="fas fa-lock input-icon"></i>
            </div>
          </div>
      
          <div class="flex items-start mt-4">
            <input type="checkbox" name="condition" id="condition" class="mt-[2px] mr-2" required>
            <label for="condition" class="text-left text-gray-600 text-sm">
              I acknowledge that the information provided is accurate and I agree to abide by the school's
              <a href="#" class="text-teal-700 underline">policies</a> &
              <a href="#" class="text-teal-700 underline">terms</a>.
            </label>
          </div>
      
          <button type="submit" class="w-full py-2 mt-4 bg-teal-600 text-white rounded-md hover:bg-teal-700 transition">
            Register
          </button>
      
          <p class="text-center text-gray-600 mt-4">
            Already have an account? <a href="/user/login" class="text-teal-700 underline">Login</a>
          </p>
        </form>
      </section>

    </section>
    
    <!--====== FOOTER =====-->
    
    <footer class="font-cy w-full bg-zinc-700 text-white py-8">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">

